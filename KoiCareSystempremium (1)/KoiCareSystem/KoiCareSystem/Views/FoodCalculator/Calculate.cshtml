    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <div id="main">
        <div id="header">
            <div id="header-top">
                <p id="sodienthoai">
                    <i class="fas fa-phone-alt"></i> Call: 0989-522-125
                </p>
                <div id="social">
                    <a href="https://www.facebook.com/Quangonkoi/" id="fb"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://www.tiktok.com/quang.koi.nht" id="ig"><i class="fa-brands fa-tiktok"></i></a>
                    <a href=" https://www.youtube.com/OnkoiQuangMinh" id="yt"><i class="fab fa-youtube"></i></a>
                    <a href=" https://x.com/onkoivn" id="tw"><i class="fab fa-twitter"></i></a>
                </div>
                <a id="dieukhoanchinhsach" href="#">
                    <i class="fas fa-file-alt"></i> Chính sách điều khoản
                </a>
                <div id="dangnhapdangki">
                    <a id="dangnhap" <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li><i class="fas fa-sign-in-alt"></i></a> |
                    <a id="dangki" <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Create">Đăng ký</a>
        </li><i class="fas fa-user-plus"></i></a>
                </div>
            </div>
            <div id="header-main-container">
                <img src="~/images/logo koi care system.png" alt="logo">

                <form id="search">
                    <input type="text" placeholder="Bạn muốn tìm gì?">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
                <div id="test">
                    <ul id="nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li>

                            <a id="dichvu" href="#">Dịch vụ</a>
                            <ul class="subnav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Aquarium" asp-action="Index">Danh sách hồ</a>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Koi" asp-action="Index">Danh sách cá Koi</a>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="FoodCalculator" asp-action="Calculate">Tính toán lượng thức ăn</a>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="SaltCalculator" asp-action="Calculate">Tính toán lượng muối</a>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="WaterParameters" asp-action="Index">Thông số nước</a>
                                </li>

                            </ul>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CaKoiNhat" asp-action="Index">Cá Koi Nhật</a>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sanpham" asp-action="Index">Sản phẩm</a>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index">Tin tức</a>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Lienhe" asp-action="Index">Liên hệ</a>
                        </li>

                    </ul>
                    </li>

                    

                </div>

            </div>
            <div class="container">
                <div class="title-header">
                    <a style="text-decoration: none; color:white; margin-left:-200px" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    <p> > Dịch vụ > Tính toán lượng thức ăn</p>
                </div>
                <h1 class="title">TÍNH TOÁN LƯỢNG THỨC ĂN</h1>
                <form asp-action="Calculate" method="post">
                    <div class="form">
                        <label>Trọng lượng cá (kg):</label>
                        <input type="number" name="weight" step="0.1" class="form-control" required />
                    </div>
                    <div class="form">
                        <label>Tỷ lệ phần trăm (%) thức ăn theo trọng lượng:</label>
                        <input type="number" name="percentage" step="0.1" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Tính Toán</button>
                </form>

                @if (ViewBag.FoodAmount != null)
                {
                    <h3>Kết Quả</h3>
                    <p>Trọng lượng cá: @ViewBag.Weight kg</p>
                    <p>Tỷ lệ phần trăm thức ăn: @ViewBag.Percentage%</p>
                    <p>Lượng thức ăn hàng ngày: @ViewBag.FoodAmount gram</p>
                }
            </div>



</body>
</html>




